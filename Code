<script>
  const post = document.getElementById('shipPost');
  const shipScene = document.getElementById('ship-scene');
  const blackout = document.getElementById('blackout');
  const seabed = document.getElementById('seabed');
  const form = document.getElementById('form');
  const credits = document.getElementById('credits');

  post.addEventListener('click', () => {
    shipScene.style.display = 'flex';
    setTimeout(() => {
      blackout.style.opacity = 1;
      setTimeout(() => {
        shipScene.style.display = 'none';
        seabed.style.display = 'flex';
      }, 3000);
    }, 1500);
  });

  form.addEventListener('submit', (e) => {
    e.preventDefault();
    seabed.style.display = 'none';
    credits.style.display = 'flex';
  });
</script>

